<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.nmk.myapplication.work.ui.view.shape.widget.HTextView
        android:id="@+id/nameTv"
        style="@style/textStyle"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="16dp"
        android:layout_marginStart="20dp"
        android:textFontWeight="600"
        app:h_selector_selected_text_color="@color/main_color"
        app:h_selector_default_text_color="@color/textColor_333333"
        tools:text="导入时间"/>
    
    <ImageView
        android:id="@+id/solidImv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_solid_arrows"
        app:layout_constraintTop_toTopOf="@+id/nameTv"
        app:layout_constraintStart_toEndOf="@+id/nameTv"
        app:layout_constraintBottom_toBottomOf="@+id/nameTv"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/stateTv"
        style="@style/textStyle"
        android:textSize="11sp"
        android:textColor="@color/textColor_999999"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="升序"/>

</androidx.constraintlayout.widget.ConstraintLayout>