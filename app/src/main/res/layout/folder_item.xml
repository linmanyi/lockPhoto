<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="swipe">

    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:src="@mipmap/icon_folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="13dp"
        tools:background="@color/white" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/textStyle"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/textColor_333333"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/coverImg"
        app:layout_constraintEnd_toStartOf="@+id/moreImv"
        app:layout_constraintTop_toTopOf="@+id/coverImg"
        app:layout_constraintBottom_toTopOf="@+id/dateTv"
        tools:text="文字最长的文字最长的文字最长的文字最长的" />

    <TextView
        android:id="@+id/dateTv"
        style="@style/textStyle"
        android:textSize="14sp"
        tools:text="2024-3-14"
        android:textColor="@color/textColor_666666"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintStart_toStartOf="@+id/titleTv"
        app:layout_constraintBottom_toBottomOf="@+id/coverImg"/>

    <ImageView
        android:id="@+id/moreImv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/main_color"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/icon_right_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>


