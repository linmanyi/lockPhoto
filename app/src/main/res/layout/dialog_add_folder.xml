<?xml version="1.0" encoding="utf-8"?>
<com.nmk.myapplication.work.ui.view.shape.widget.HConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="52dp"
    app:h_shape_corners_radius="8dp"
    app:h_shape_solid="@color/white">

    <TextView
        android:id="@+id/textTv"
        style="@style/textStyle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/add_photo_album"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:textColor="@color/textColor_333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconImv" />

    <TextView
        style="@style/textStyle"
        android:textSize="14sp"
        android:text="@string/photo_album_name"
        android:textFontWeight="600"
        android:textColor="@color/textColor_333333"
        app:layout_constraintBottom_toTopOf="@+id/edTv"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@+id/edTv"
        />

    <com.nmk.myapplication.work.ui.view.shape.widget.HEditText
        android:id="@+id/edTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="46dp"
        android:background="@null"
        android:hint="@string/please_input"
        android:textColorHint="@color/textColor_666666"
        android:textSize="16sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textColor="@color/textColor_333333"
        app:h_shape_corners_radius="2dp"
        app:h_shape_solid="#FCF2E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTv" />

    <com.nmk.myapplication.work.ui.view.shape.widget.HTextView
        android:id="@+id/sureTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:text="@string/sure"
        android:textColor="@color/white"
        app:h_selector_selected_solid="@color/main_color"
        app:h_shape_corners_radius="2dp"
        app:h_shape_solid="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"
        app:layout_constraintTop_toBottomOf="@+id/edTv" />

    <ImageView
        android:id="@+id/closeImv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/gray"
        android:src="@mipmap/ic_x_back"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.nmk.myapplication.work.ui.view.shape.widget.HConstraintLayout>