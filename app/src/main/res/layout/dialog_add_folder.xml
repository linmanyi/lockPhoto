<?xml version="1.0" encoding="utf-8"?>
<com.nmk.myapplication.work.ui.view.shape.widget.HConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:h_shape_corners_radius="8dp"
    android:paddingVertical="20dp"
    app:h_shape_solid="@color/white">
    
    <ImageView
        android:id="@+id/iconImv"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/textTv"
        style="@style/textStyle"
        app:layout_constraintTop_toBottomOf="@+id/iconImv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="创建新相册"/>

    <com.nmk.myapplication.work.ui.view.shape.widget.HEditText
        android:id="@+id/edTv"
        android:layout_width="0dp"
        android:background="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        app:h_shape_corners_radius="20dp"
        android:lines="1"
        android:textColor="@color/textColor_333333"
        app:h_shape_stroke_width="1dp"
        app:h_shape_stroke_color="@color/main_color"
        android:layout_height="wrap_content"/>

    <com.nmk.myapplication.work.ui.view.shape.widget.HTextView
        android:id="@+id/sureTv"
        android:layout_width="0dp"
        android:text="确定"
        app:h_selector_selected_solid="@color/main_color"
        app:h_shape_solid="@color/gray"
        app:h_shape_corners_radius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/closeImv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</com.nmk.myapplication.work.ui.view.shape.widget.HConstraintLayout>