<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="213dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logoImv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@mipmap/icon_logo"
        android:paddingTop="54dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/main_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/shallow_gray"
        app:layout_constraintTop_toBottomOf="@+id/logoImv"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/pictureTv"
                style="@style/textStyle"
                android:textSize="16sp"
                android:textColor="@color/textColor_333333"
                android:layout_width="match_parent"
                android:drawableStart="@mipmap/icon_menu_picture"
                android:paddingStart="12dp"
                android:drawablePadding="10dp"
                android:paddingVertical="15dp"
                android:text="相册"/>

            <TextView
                android:id="@+id/videoTv"
                style="@style/textStyle"
                android:textSize="16sp"
                android:textColor="@color/textColor_333333"
                android:layout_width="match_parent"
                android:drawableStart="@mipmap/icon_menu_video"
                android:paddingStart="12dp"
                android:drawablePadding="10dp"
                android:paddingVertical="15dp"
                android:text="视频"/>

            <TextView
                android:id="@+id/settingTv"
                style="@style/textStyle"
                android:textSize="16sp"
                android:textColor="@color/textColor_333333"
                android:layout_width="match_parent"
                android:drawableStart="@mipmap/icon_menu_setting"
                android:paddingStart="12dp"
                android:drawablePadding="10dp"
                android:paddingVertical="15dp"
                android:text="设置"/>

            <TextView
                android:id="@+id/aboutTv"
                style="@style/textStyle"
                android:textSize="16sp"
                android:textColor="@color/textColor_333333"
                android:layout_width="match_parent"
                android:drawableStart="@mipmap/icon_menu_about"
                android:paddingStart="12dp"
                android:drawablePadding="10dp"
                android:paddingVertical="15dp"
                android:text="关于我们"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>