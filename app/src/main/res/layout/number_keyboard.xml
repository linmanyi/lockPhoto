<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/number1"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number2"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number3"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toTopOf="@+id/number1" />

    <TextView
        android:id="@+id/number3"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number2"
        app:layout_constraintTop_toTopOf="@+id/number1" />

    <TextView
        android:id="@+id/number4"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@+id/number5"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number3"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toTopOf="@+id/number4" />

    <TextView
        android:id="@+id/number6"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number2"
        app:layout_constraintTop_toTopOf="@+id/number4" />

    <TextView
        android:id="@+id/number7"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4" />

    <TextView
        android:id="@+id/number8"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number3"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toTopOf="@+id/number7" />

    <TextView
        android:id="@+id/number9"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number2"
        app:layout_constraintTop_toTopOf="@+id/number7" />

    <TextView
        android:id="@+id/number0"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/number8"
        app:layout_constraintStart_toStartOf="@+id/number8"
        app:layout_constraintTop_toBottomOf="@+id/number8" />

    <ImageView
        android:id="@+id/deleteImv"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:src="@mipmap/icon_num_delete"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/number0"
        app:layout_constraintEnd_toEndOf="@+id/number9"
        app:layout_constraintStart_toStartOf="@+id/number9"
        app:layout_constraintTop_toBottomOf="@+id/number9" />

</androidx.constraintlayout.widget.ConstraintLayout>